    <path id="classpath">
        <fileset dir="c:\temp\libs\" includes="**/*.jar"/>
    </path>

	<target name="clean">
	  <echo>=== CLEAN ===</echo>
	  <delete failonerror="false">
	    <fileset dir="${dir.build.BasePath}" includes="**/*"/>
	  </delete>
	  <delete dir="${dir.build.BasePath}" />
	</target>
	
	<target name="prepare" depends="clean">
	  <echo>=== PREPARE ===</echo>
	  <mkdir dir="temp" />
	  <mkdir dir="temp/classes" />
	</target>

	<target name="compile"  depends="prepare" >
	  <echo>=== Compile ===</echo>
        <javac srcdir="../src" destdir="temp/classes"  classpathref="classpath"/>
    </target>

	 <target name="build" depends="compile" >
	  <echo>=== BUILD ===</echo>
		 <war destfile="c:\temp\Build.war" >
		  <fileset dir="../WebContent"/>
		  <classes dir="temp/classes"/>
		</war>
	  </target>

	<target name="deploy" depends="build" >
